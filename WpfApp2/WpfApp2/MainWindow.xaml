<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.612,0.442">
        <Slider HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Width="259" ValueChanged="Slider_ValueChanged" Minimum="0" Maximum="100" TickFrequency="1" Name ="sliderverdi" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>
        <TextBox x:Name="myNumber" HorizontalAlignment="Center" Margin="0,193,0,0" TextWrapping="Wrap" Text="{Binding ElementName=sliderverdi, Path=Value, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
